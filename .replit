modules = ["nodejs-20", "python-3.11", "postgresql-16"]
[agent]
expertMode = true
integrations = ["javascript_openai_ai_integrations:1.0.0", "javascript_log_in_with_replit:2.0.0", "stripe:2.0.0", "google-mail:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["ffmpeg", "zip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Server"

[[workflows.workflow]]
name = "Backend Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node index.js"
waitForPort = 8080

[[workflows.workflow]]
name = "Frontend Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev -- -p 5000"
waitForPort = 5000

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[userenv]

[userenv.development]
NODE_ENV = "development"
NEXT_DISABLE_DEVTOOLS = "1"

[userenv.shared]

[userenv.production]
NEXT_PUBLIC_API_URL = "https://baytaljazeera-platform-production.up.railway.app"

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "node backend/index.js & cd frontend && npm start"]
build = ["bash", "-c", "cd frontend && npm run build"]
